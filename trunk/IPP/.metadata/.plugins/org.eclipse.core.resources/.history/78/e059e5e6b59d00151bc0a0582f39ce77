package com.qihui.ssh.dao.user;

import java.util.List;

import org.springframework.orm.hibernate3.HibernateTemplate;

import com.qihui.ssh.dao.BaseDAOImpl;
import com.qihui.ssh.dao.entities.Employee;

public class UserDAOImpl extends BaseDAOImpl implements UserDAO {

	@SuppressWarnings("unchecked")
	public List<Employee> getUserByUserId(String userId) {

		HibernateTemplate ht = this.getHibernateTemplate();
		String hql = "from Employee where userName = ?";
		Object[] obj = { userId };
		return ht.find(hql, obj);
	}
}
