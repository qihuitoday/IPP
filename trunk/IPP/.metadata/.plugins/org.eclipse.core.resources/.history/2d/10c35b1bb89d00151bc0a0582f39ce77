<script type="text/javascript" src="etc/js/jquery-1.6.2.js"></script>
<script type="text/javascript" src="etc/js/jquery.validate.js"></script>
<script type="text/javascript">

	$().ready(function() {
		// validate signup form on keyup and submit
		$("#signupForm").validate({
			rules: {
				'site.chineseName': {
					required: true,
					maxlength: 100
				},
				'site.englishName': {
					required: true,
					maxlength: 32
				},
				'site.brief': {
					required: true,
					maxlength: 140
				},
				'site.content': {
					required: true,
					maxlength: 1000
				},
				'site.level.id': {
					required: true
				},
				'site.region.id': {
					required: true
				}
			},
			messages: {
				'site.chineseName': {
					required: "请输入中文名",
					maxlength: "中文名最多100位"
				},
				'site.englishName': {
					required: "请输入英文名",
					maxlength: "英文名最多32位"
				},
				'site.brief': {
					required: "请输入简介",
					maxlength: "简介最多140位"
				},
				'site.content': {
					required: "请输入具体内容",
					maxlength: "内容最多1000位"
				},
				'site.level.id': {
					required: "请选择推荐级别"
				},
				'site.region.id': {
					required: "请选择省份"
				}
			}
		});
		
	});
</script>
</head>
<body>
	<s:form action="addSite" class="cmxform" id="signupForm" >
		<s:textfield name="site.chineseName" label="中文名"></s:textfield>
		<s:textfield name="site.englishName" label="英文名"></s:textfield>
		<s:textfield name="site.brief" label="简介"></s:textfield>
		<s:textfield name="site.content" label="具体内容"></s:textfield>
		<s:select name="site.level.id" label="推荐级别" list="levelList"
			listKey="id" listValue="name" headerKey="" headerValue="选择">
		</s:select>
		<s:select name="site.region.id" label="省份" list="provinceList"
			listKey="id" listValue="name" headerKey="" headerValue="选择">
		</s:select>
		<s:submit type="submit" value="Add Site"></s:submit>
	</s:form>

</body>
