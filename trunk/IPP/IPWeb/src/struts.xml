<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- struts2委托spring管理 -->
	<constant name="struts.locale" value="zh_CN"/>
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.objectFactory" value="spring" />
	<package name="struts2" extends="struts-default">
		<!--Sys module begin -->
		<action name="login" class="login">
			<result name="success" type="redirect">lvyou</result>
			<result name="failer" type="redirect">loginUI</result>
		</action>
		<action name="loginUI" class="loginUI">
			<result name="success">/page/sys/login.jsp</result>
		</action>
		<action name="logout" class="logout">
			<result name="success" type="redirect">lvyou</result>
		</action>
		<action name="registerUI" class="registerUI">
			<result name="success">/page/sys/register.jsp</result>
		</action>
		<action name="register" class="register">
			<result name="success" type="redirect">lvyou</result>
		</action>
		<!--Sys module end   -->
	
		<!--User module begin-->
		<!--User module end  -->
		
		<!--Site module begin-->
		<action name="mengYe" class="mengYe">
			<result name="success">/page/site/mengye.jsp</result>
		</action>
		<action name="helpUI" class="helpUI">
			<result name="success">/page/site/help.jsp</result>
		</action>
		<action name="postUI" class="postUI">
			<result name="success">/page/site/post.jsp</result>
		</action>
		<action name="post" class="post">
			<result name="success">/page/site/site.jsp</result>
		</action>
		<action name="addSite" class="addSite">
			<result name="toAddSite">/page/site/addSite.jsp</result>
			<result name="toRegestor">/page/sys/register.jsp</result>
			<result name="success">/page/site/lvyou.jsp</result>
		</action>
		<!--Site module end-->
		
		<!--Novel module begin-->
		<action name="novelIndex" class="novelIndex">
			<result name="success">/page/novel/novelIndex.jsp</result>
		</action>
		<action name="novelBook" class="novelBook">
			<result name="success">/page/novel/novelBook.jsp</result>
		</action>
		<action name="novelList" class="novelList">
			<result name="success">/page/novel/novelList.jsp</result>
		</action>
		<action name="novelDetail" class="novelDetail">
			<result name="success">/page/novel/novelDetail.jsp</result>
		</action>
		<action name="novelChapterAddUI" class="novelChapterAddUI">
			<result name="success">/page/novel/novelChapterAdd.jsp</result>
		</action>
		<action name="novelChapterAdd" class="novelChapterAdd">
			<result name="success" type="redirect">novelBook?novelID=${novelID}</result>
		</action>
		<action name="novelUploadFile" class="novelUploadFile">
			<result name="success" type="redirect">novelBook?novelID=${novelID}</result>
		</action>
		<!--Novel module begin-->
	</package>
</struts>
